{
	"servers": {
		"AssocMemory": {
			"command": "python3",
			"args": [
				"-m",
				"mcp_assoc_memory.server",
				"--config",
				"config.json"
			],
			"cwd": "${workspaceFolder}",
			"env": {
				"PYTHONPATH": "${workspaceFolder}/src",
				"LOG_LEVEL": "INFO",
				"MCP_LOG_LEVEL": "INFO",
                "PATH": "${workspaceFolder}/venv/bin:/usr/local/bin:/usr/bin:/bin"
			},
			"type": "stdio"
		},
		"mcp-search": {
			"command": "npx",
			"args": [
				"@mako10k/mcp-search"
			],
			"env": {
				"GOOGLE_API_KEY": "${input:google_api_key}",
				"GOOGLE_CX": "${input:google_cx}"
			},
			"type": "stdio"
		},
		"mcp-shell-server": {
			"command": "npx",
			"args": [
				"@mako10k/mcp-shell-server@2.1.4"
			],
			"type": "stdio"
		}
	},
	"inputs": [
		{
			"id": "google_api_key",
			"type": "promptString",
			"description": "API key for Google Search API. Obtain from Google Cloud Console."
		},
		{
			"id": "google_cx",
			"type": "promptString",
			"description": "Custom Search Engine ID for Google Search API."
		}
	]
}