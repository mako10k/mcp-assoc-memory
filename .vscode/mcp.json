{
	"servers": {
		"AssocMemory": {
			"command": "python3",
			"args": [
				"-m",
				"mcp_assoc_memory.server",
				"--config",
				"config.json"
			],
			"cwd": "${workspaceFolder}",
			"env": {
				"PYTHONPATH": "${workspaceFolder}/src",
				"GOOGLE_API_KEY": "AIzaSyBBvo8t3hn4AOxG4PxiNoc-PlvI0vFNv4g",
				"GOOGLE_CX": "7313b1ea006ad4112"
			},
			"type": "stdio"
		},
		"mcp-search": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@mako10k/mcp-search@2.0.0"
			],
			"env": {
				"GOOGLE_API_KEY": "AIzaSyBBvo8t3hn4AOxG4PxiNoc-PlvI0vFNv4g",
				"GOOGLE_CX": "7313b1ea006ad4112"
			}
		},
		"mcp-shell-server": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@mako10k/mcp-shell-server@2.2.0"
			],
			"env": {
				"MCP_SHELL_SECURITY_MODE": "${input:security_mode}",
				"MCP_SHELL_DEFAULT_WORKDIR": "${input:default_workdir}",
				"MCP_SHELL_ALLOWED_WORKDIRS": "${input:allowed_workdirs}"
			}
		},
		"mcp-llm-generator": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@mako10k/mcp-llm-generator@1.4.1"
			],
			"env": {
				"LOG_LEVEL": "warn",
				"NODE_ENV": "production"
			}
		}
	},
	"inputs": [
		{
			"id": "security_mode",
			"type": "promptString",
			"description": "Security mode (permissive, restrictive, or custom)? Leave blank for default (restrictive)."
		},
		{
			"id": "default_workdir",
			"type": "promptString",
			"description": "Default working directory for shell commands (optional)"
		},
		{
			"id": "allowed_workdirs",
			"type": "promptString",
			"description": "Comma-separated list of allowed working directories (optional)"
		}
	]
}